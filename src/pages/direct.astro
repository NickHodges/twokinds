---
import Layout from '../layouts/Layout.astro';
import DirectSayingForm from '../components/DirectSayingForm.astro';
import '../styles/index.css';

// Set page to not be prerendered
export const prerender = false;
---

<Layout title="Create a New Saying - Direct Method">
  <div class="container mx-auto px-4 py-8">
    <header class="text-center mb-8">
      <h1 class="text-4xl font-bold mb-2">Two Kinds of People</h1>
      <p class="text-xl text-gray-600 mb-4">Direct Submission Method</p>
      <a href="/" class="text-blue-600 hover:text-blue-800">Back to Home</a>
    </header>

    <div class="max-w-2xl mx-auto">
      <DirectSayingForm />
    </div>
  </div>
</Layout>