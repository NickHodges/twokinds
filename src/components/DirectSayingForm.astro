---
import { actions } from "astro:actions";

// A completely simplified form that uses a basic approach
---

<div class="bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-4">Create a New Saying</h2>

  <div
    id="errorContainer"
    class="hidden mb-6 p-3 bg-red-50 border border-red-200 text-red-800 rounded">
    <p id="errorMessage"></p>
  </div>

  <form id="directForm" class="space-y-4" action={actions.submitSaying}>
    <div>
      <label class="block text-gray-700 font-medium mb-2">Introduction:</label>
      <select name="intro" class="w-full p-2 border border-gray-300 rounded-md" required>
        <option value="">-- Select an Introduction --</option>
        <option value="1">There are two kinds of people in the world...</option>
        <option value="2">In life, you'll meet two types of people...</option>
        <option value="3">People can be divided into two categories...</option>
      </select>
    </div>

    <div>
      <label class="block text-gray-700 font-medium mb-2">First Lead:</label>
      <select name="firstLead" class="w-full p-2 border border-gray-300 rounded-md" required>
        <option value="">-- Select Lead Phrase --</option>
        <option value="1">People who...</option>
        <option value="2">Folks who...</option>
        <option value="3">Those who...</option>
      </select>
    </div>

    <div>
      <label class="block text-gray-700 font-medium mb-2">First Kind Description:</label>
      <input
        type="text"
        name="firstKind"
        placeholder="e.g., put their shopping cart back"
        class="w-full p-2 border border-gray-300 rounded-md"
        required
      />
    </div>

    <div>
      <label class="block text-gray-700 font-medium mb-2">Second Lead:</label>
      <select name="secondLead" class="w-full p-2 border border-gray-300 rounded-md" required>
        <option value="">-- Select Lead Phrase --</option>
        <option value="1">People who...</option>
        <option value="2">Folks who...</option>
        <option value="3">Those who...</option>
      </select>
    </div>

    <div>
      <label class="block text-gray-700 font-medium mb-2">Second Kind Description:</label>
      <input
        type="text"
        name="secondKind"
        placeholder="e.g., leave it in the parking lot"
        class="w-full p-2 border border-gray-300 rounded-md"
        required
      />
    </div>

    <div>
      <button
        type="submit"
        class="w-full py-2 px-4 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700">
        Submit
      </button>
    </div>
  </form>

  <div id="previewContainer" class="mt-8 pt-6 border-t border-gray-200 hidden">
    <h3 class="text-lg font-medium mb-2">Preview:</h3>
    <div id="previewContent" class="bg-gray-50 p-4 rounded-md">
      <!-- Preview content will be inserted here -->
    </div>
  </div>
</div>
