---
/**
 * @typedef {object} Props
 * @property {'success' | 'error'} type - Type of notification
 * @property {string} [message] - Message text to display (optional if using slots)
 */
// interface Props {
//   type: 'success' | 'error';
//   message?: string;
// }

const { type, message } = Astro.props;

const bgColor =
  type === 'success' ? 'bg-green-100 dark:bg-green-900' : 'bg-red-100 dark:bg-red-900';
const textColor =
  type === 'success' ? 'text-green-800 dark:text-green-200' : 'text-red-800 dark:text-red-200';
const iconColor =
  type === 'success' ? 'text-green-500 dark:text-green-400' : 'text-red-500 dark:text-red-400';
---

<div class={`rounded-md p-4 mb-6 ${bgColor}`}>
  <div class="flex">
    <div class="flex-shrink-0">
      {
        type === 'success' ? (
          <svg
            class={`h-5 w-5 ${iconColor}`}
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
              clip-rule="evenodd"
            />
          </svg>
        ) : (
          <svg
            class={`h-5 w-5 ${iconColor}`}
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
              clip-rule="evenodd"
            />
          </svg>
        )
      }
    </div>
    <div class="ml-3 flex-1">
      {
        message ? (
          <p class={`text-sm font-medium ${textColor}`}>{message}</p>
        ) : (
          <div class={textColor}>
            <slot />
          </div>
        )
      }
    </div>
  </div>
</div>
