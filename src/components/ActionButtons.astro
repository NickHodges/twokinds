---
/**
 * @typedef {object} Props
 * @property {string} [viewUrl] - URL to view the saying (optional)
 * @property {string} createAnotherUrl - URL to create another saying
 */

const { createAnotherUrl, viewUrl } = Astro.props;
---

<div class="mt-4 flex justify-center space-x-4">
  {
    viewUrl ? (
      <a
        href={viewUrl}
        class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 bg-white hover:bg-gray-50 text-base font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
      >
        View saying
      </a>
    ) : (
      <a
        href={createAnotherUrl}
        class="inline-flex items-center px-4 py-2 border border-transparent text-white bg-blue-600 hover:bg-blue-700 dark:bg-blue-700 dark:hover:bg-blue-800 text-base font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
      >
        Create another saying
      </a>
    )
  }
</div>
